{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "lib": ["es2021"],
    "types": ["@citizenfx/server", "@types/node"],
    "moduleResolution": "node",
    "paths": {
      "@common/*": ["../../../../common/*"],
    },
  },
  "include": ["./**/*"],
  "exclude": ["**/node_modules"]
}
